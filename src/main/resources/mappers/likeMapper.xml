<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.market.like.dao.LikeMapper">
	<select id="selectLikeCountByPostIdOrUserId" parameterType="map" resultType="int">
		SELECT
			COUNT(*)
		FROM
			`like`
		WHERE
			`postId` = #{postId}
		<if test="userId != null">
			AND `userId` = #{userId}
		</if>
	</select>
	
	<insert id="insertLike" parameterType="map">
		INSERT INTO `like`
		(
			`userId`
			, `postId`
			, `createdAt`
		)
		VALUES
		(
			#{userId}
			, #{postId}
			, NOW()
		)
	</insert>
	
	<delete id="deleteLikeByPostIdAndUserId" parameterType="map">
		DELETE
		FROM
			`like`
		WHERE
			`userId` = #{userId}
		AND `postId` = #{postId}
	</delete>
	
	<delete id="deleteLikeByPostId" parameterType="int">
		DELETE
		FROM
			`like`
		WHERE
			`postId` = #{postId}
	</delete>
</mapper>